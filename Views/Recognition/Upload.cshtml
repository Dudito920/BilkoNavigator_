<h2>Сканирай билка</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file"
           name="image"
           accept="image/*"
           capture="environment"
           required />

    <br /><br />

    <button type="submit">Разпознай</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}