@using BilkoNavigator_.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    var identityName = User.Identity?.Name ?? string.Empty;
    var atIndex = identityName.IndexOf('@');
    var displayName = atIndex > 0 ? identityName[..atIndex] : identityName;
    if (string.IsNullOrWhiteSpace(displayName))
    {
        displayName = "потребител";
    }

    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="form-inline">
        <ul class="navbar-nav">
            <li class="nav-item">
                <span class="nav-link text-dark" title="Моят профил">Здравей, @displayName</span>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark">Изход</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
        </li>
    </ul>
}
