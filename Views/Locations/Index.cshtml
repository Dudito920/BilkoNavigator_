@model IEnumerable<BilkoNavigator_.Models.Location>

@{
    ViewData["Title"] = "Локации";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Локации</h1>

<p>
    <a asp-action="Create">Създай нова</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ширина
            </th>
            <th>
                Дължина
            </th>
            <th>
                Описание
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редакция</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детайли</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>
