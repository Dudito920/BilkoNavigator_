@model BilkoNavigator_.Models.Location

@{
    ViewData["Title"] = "Изтриване";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Изтриване</h1>

<h3>Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Локация</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ширина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class = "col-sm-2">
            Дължина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Назад към списъка</a>
    </form>
</div>
