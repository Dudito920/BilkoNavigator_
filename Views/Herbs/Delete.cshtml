@model BilkoNavigator_.Models.Herb

@{
    ViewData["Title"] = "Изтриване на билка";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="herb-delete-page">
    <nav class="herb-breadcrumbs" aria-label="Навигация">
        <a asp-action="Index">Каталог</a>
        <span class="herb-breadcrumbs__sep">/</span>
        <a asp-action="Details" asp-route-id="@Model.Id">@Model.PopularName</a>
        <span class="herb-breadcrumbs__sep">/</span>
        <span class="herb-breadcrumbs__current">Изтриване</span>
    </nav>

    <header class="herb-delete-header">
        <h1 class="herb-delete-title">Потвърждение за изтриване</h1>
        <p class="herb-delete-subtitle">
            Сигурни ли сте, че искате да изтриете тази билка? Това действие не може да бъде отменено.
        </p>
    </header>

    <div class="herb-delete-card">
        <div class="herb-delete-grid">
            <div class="herb-delete-media">
                @if (Model.Image != null)
                {
                    <img src="@Model.Image.ImagePath" alt="@Model.PopularName" />
                }
                else
                {
                    <div class="herb-delete-placeholder"></div>
                }
            </div>

            <div class="herb-delete-info">
                <h2 class="herb-delete-name">@Model.PopularName</h2>

                @if (!string.IsNullOrWhiteSpace(Model.LatinName))
                {
                    <div class="herb-delete-latin">@Model.LatinName</div>
                }

                <div class="herb-delete-facts">
                    @if (!string.IsNullOrWhiteSpace(Model.Habitat))
                    {
                        <div class="herb-delete-row">
                            <span>Местообитание</span>
                            <span>@Model.Habitat</span>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Season))
                    {
                        <div class="herb-delete-row">
                            <span>Сезон</span>
                            <span>@Model.Season</span>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.UsedPart))
                    {
                        <div class="herb-delete-row">
                            <span>Използвана част</span>
                            <span>@Model.UsedPart</span>
                        </div>
                    }

                    <div class="herb-delete-row">
                        <span>Отровна</span>
                        <span>@(Model.IsPoisonous ? "Да" : "Не")</span>
                    </div>

                    <div class="herb-delete-row">
                        <span>Защитена</span>
                        <span>@(Model.IsProtected ? "Да" : "Не")</span>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="herb-delete-actions">
            <input type="hidden" asp-for="Id" />

            <a asp-action="Details" asp-route-id="@Model.Id" class="bn-btn bn-btn--ghost">
                Отказ
            </a>

            <button type="submit" class="bn-btn bn-btn--danger">
                Изтрий окончателно
            </button>
        </form>
    </div>
</section>
