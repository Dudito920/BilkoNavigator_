@model IEnumerable<BilkoNavigator_.Models.Herb>

@{
    ViewData["Title"] = "Каталог билки";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var currentSearch = ViewData["SearchQuery"] as string ?? string.Empty;
    var currentStatus = ViewData["StatusFilter"] as string ?? string.Empty;
}

<section class="herbs-page">
    <header class="herbs-header">
        <div class="herbs-header__left">
            <h1 class="herbs-title">Каталог билки</h1>
            <p class="herbs-subtitle">
                Разгледай лечебни растения, техните характеристики и полезни приложения.
            </p>
        </div>

        <div class="herbs-header__right">
            <a href="/Herbs/Create" class="bn-btn bn-btn--primary">Добави билка</a>
        </div>
    </header>

    <div class="herbs-toolbar">
        <form class="herbs-search" asp-controller="Herbs" asp-action="Search" method="get">
            <label class="sr-only" for="herbSearch">Търсене</label>
            <input id="herbSearch" name="query" class="bn-input" type="search"
                   value="@currentSearch"
                   placeholder="Търси по име, латинско име, местообитание..." />
            <input type="hidden" name="status" value="@currentStatus" />
            <button type="submit" class="sr-only">Търсене</button>
        </form>

        <div class="herbs-filters">
            <form asp-controller="Herbs" asp-action="Search" method="get">
                <input type="hidden" name="query" value="@currentSearch" />
                <label class="sr-only" for="statusFilter">Статус</label>
                <select id="statusFilter" name="status" class="bn-select" aria-label="Статус" onchange="this.form.submit()">
                    <option value="" selected="@(string.IsNullOrEmpty(currentStatus) ? "selected" : null)">Статус: всички</option>
                    <option value="protected" selected="@(currentStatus == "protected" ? "selected" : null)">Защитени</option>
                    <option value="poisonous" selected="@(currentStatus == "poisonous" ? "selected" : null)">Отровни</option>
                    <option value="unrestricted" selected="@(currentStatus == "unrestricted" ? "selected" : null)">Без ограничения</option>
                </select>
            </form>
            <a class="bn-btn bn-btn--ghost" asp-controller="Map" asp-action="Index">Виж на карта</a>
        </div>
    </div>

    @{
        var list = Model?.ToList() ?? new List<BilkoNavigator_.Models.Herb>();
    }

    @if (!list.Any())
    {
        <div class="bn-empty">
            <div class="bn-empty__box">
                <h2 class="bn-empty__title">Няма добавени билки</h2>
                <p class="bn-empty__text">
                    Започни каталога, като добавиш първата билка.
                </p>
                <a href="/Herbs/Create" class="bn-btn bn-btn--primary">Добави билка</a>
            </div>
        </div>
    }
    else
    {
        <div class="herbs-grid">
            @foreach (var item in list)
            {
                <article class="herb-card">
                    <a class="herb-card__media" asp-action="Details" asp-route-id="@item.Id" aria-label="Детайли">
                        @if (item.Image != null)
                        {
                            <img src="@item.Image.ImagePath" alt="@item.PopularName" loading="lazy" />
                        }
                        else
                        {
                            <div class="herb-card__placeholder" aria-hidden="true"></div>
                        }

                    </a>

                    <div class="herb-card__body">
                        <div class="herb-card__top">
                            <h3 class="herb-card__title">
                                <a asp-action="Details" asp-route-id="@item.Id">@item.PopularName</a>
                            </h3>

                            @if (!string.IsNullOrWhiteSpace(item.LatinName))
                            {
                                <div class="herb-card__latin">@item.LatinName</div>
                            }
                        </div>

                        @if (item.IsProtected || item.IsPoisonous)
                        {
                            <div class="herb-card__badges">
                                @if (item.IsProtected)
                                {
                                    <span class="bn-badge bn-badge--info">Защитена</span>
                                }
                                @if (item.IsPoisonous)
                                {
                                    <span class="bn-badge bn-badge--danger">Отровна</span>
                                }
                            </div>
                        }

                        <div class="herb-meta">
                            @if (!string.IsNullOrWhiteSpace(item.Season))
                            {
                                <div class="herb-meta__row">
                                    <span class="herb-meta__label">Сезон</span>
                                    <span class="herb-meta__value">@item.Season</span>
                                </div>
                            }

                            @if (!string.IsNullOrWhiteSpace(item.Habitat))
                            {
                                <div class="herb-meta__row">
                                    <span class="herb-meta__label">Местообитание</span>
                                    <span class="herb-meta__value">@item.Habitat</span>
                                </div>
                            }

                            @if (!string.IsNullOrWhiteSpace(item.UsedPart))
                            {
                                <div class="herb-meta__row">
                                    <span class="herb-meta__label">Използвана част</span>
                                    <span class="herb-meta__value">@item.UsedPart</span>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrWhiteSpace(item.Benefits))
                        {
                            <p class="herb-card__desc">@item.Benefits</p>
                        }
                        else if (!string.IsNullOrWhiteSpace(item.Description))
                        {
                            <p class="herb-card__desc">@item.Description</p>
                        }
                        else
                        {
                            <p class="herb-card__desc herb-card__desc--muted">
                                Няма добавено описание.
                            </p>
                        }

                        <div class="herb-card__actions">
                            <a class="bn-btn bn-btn--ghost" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="bn-btn bn-btn--ghost" asp-action="Edit" asp-route-id="@item.Id">Редакция</a>
                                <a class="bn-btn bn-btn--danger" asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
                            }
                        </div>
                    </div>
                </article>
            }
        </div>
    }
</section>
