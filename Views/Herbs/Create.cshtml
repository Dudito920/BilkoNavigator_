@model BilkoNavigator_.Models.Herb

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Herb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Herbs"
              asp-action="Create"
              method="post"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PopularName" class="control-label">Популярно име</label>

                <!-- 🔴 КЛЮЧОВАТА КОРЕКЦИЯ -->
                <input type="text"
                       name="PopularName"
                       value="@Model?.PopularName"
                       class="form-control" />

                <span asp-validation-for="PopularName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LatinName" class="control-label">Латинско име</label>
                <input asp-for="LatinName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DialectNames" class="control-label">Диалектно име</label>
                <input asp-for="DialectNames" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Aroma" class="control-label">Аромат</label>
                <input asp-for="Aroma" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Taste" class="control-label">Вкус</label>
                <input asp-for="Taste" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Habitat" class="control-label">Местообитание</label>
                <input asp-for="Habitat" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Season" class="control-label">Сезон</label>
                <input asp-for="Season" class="form-control" />
            </div>


            <div class="form-check mb-2">
                <input class="form-check-input"
                       type="checkbox"
                       name="IsPoisonous"
                       value="true"
                       @(Model?.IsPoisonous == true ? "checked" : "") />
                <label class="form-check-label">
                    Отровно
                </label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input"
                       type="checkbox"
                       name="IsProtected"
                       value="true"
                       @(Model?.IsProtected == true ? "checked" : "") />
                <label class="form-check-label">
                    Защитено
                </label>
            </div>


        @*  <div class="form-group form-check">
                <input asp-for="IsPoisonous" class="form-check-input" />
                <label asp-for="IsPoisonous" class="form-check-label">Отровно</label>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsProtected" class="form-check-input" />
                <label asp-for="IsProtected" class="form-check-label">Защитено</label>
            </div> *@

            <div class="form-group">
                <label asp-for="UsedPart" class="control-label">Използваема част</label>
                <input asp-for="UsedPart" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Benefits" class="control-label">Ползи</label>
                <input asp-for="Benefits" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
            </div>


           
            <div class="form-group">
                <label>Upload Image</label>
                <input type="file"
                       name="ImageFile"
                       class="form-control"
                       accept="image/*"
                       onchange="previewImage(event)" />

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
