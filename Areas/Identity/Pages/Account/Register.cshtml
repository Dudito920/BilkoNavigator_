@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<section class="auth-page">
    <div class="auth-shell">
        <div class="auth-card">
            <header class="auth-header">
                <h1 class="auth-title">Създаване на профил</h1>
                <p class="auth-subtitle">
                    Регистрирай се, за да добавяш билки, да отбелязваш открития и да участваш в общността.
                </p>
            </header>

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="auth-validation" role="alert"></div>
            }

            <form id="registerForm" class="auth-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="auth-grid">
                    <div class="auth-field">
                        <label asp-for="Input.Email" class="auth-label">Имейл</label>
                        <input asp-for="Input.Email"
                               class="auth-input"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="ime@primer.bg" />
                        <span asp-validation-for="Input.Email" class="auth-error"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="Input.Password" class="auth-label">Парола</label>
                        <input asp-for="Input.Password"
                               class="auth-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Минимум 6 символа" />
                        <span asp-validation-for="Input.Password" class="auth-error"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="Input.ConfirmPassword" class="auth-label">Потвърди паролата</label>
                        <input asp-for="Input.ConfirmPassword"
                               class="auth-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Повтори паролата" />
                        <span asp-validation-for="Input.ConfirmPassword" class="auth-error"></span>
                    </div>
                </div>

                <button id="registerSubmit" type="submit" class="auth-btn auth-btn--primary">
                    Регистрация
                </button>

                <div class="auth-links">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Вече имаш профил? Вход</a>
                </div>
            </form>
        </div>

        <aside class="auth-aside">
            <div class="auth-aside__card">
                <h2 class="auth-aside__title">Защо да се регистрираш?</h2>
                <ul class="auth-list">
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Добавяй билки към каталога
                    </li>
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Отбелязвай открития върху картата
                    </li>
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Помагай на общността с информация и снимки
                    </li>
                </ul>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="auth-aside__card">
                    <h2 class="auth-aside__title">Регистрация с друг профил</h2>

                    <form id="external-account"
                          asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post"
                          class="auth-ext">

                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="auth-btn auth-btn--ghost"
                                    name="provider"
                                    value="@provider.Name"
                                    title="Вход с @provider.DisplayName">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </aside>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
