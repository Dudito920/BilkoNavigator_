@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<section class="auth-page">
    <div class="auth-shell">
        <div class="auth-card">
            <header class="auth-header">
                <h1 class="auth-title">Вход</h1>
                <p class="auth-subtitle">
                    Влез в профила си, за да добавяш билки, да отбелязваш открития и да използваш всички функции.
                </p>
            </header>

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="auth-validation" role="alert"></div>
            }

            <form id="account" class="auth-form" method="post">
                <div class="auth-grid">
                    <div class="auth-field">
                        <label asp-for="Input.Email" class="auth-label">Имейл</label>
                        <input asp-for="Input.Email"
                               class="auth-input"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="ime@primer.bg" />
                        <span asp-validation-for="Input.Email" class="auth-error"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="Input.Password" class="auth-label">Парола</label>
                        <input asp-for="Input.Password"
                               class="auth-input"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="Парола" />
                        <span asp-validation-for="Input.Password" class="auth-error"></span>
                    </div>

                    <label class="auth-check">
                        <input class="auth-check__input" asp-for="Input.RememberMe" />
                        <span class="auth-check__text">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                    </label>
                </div>

                <button id="login-submit" type="submit" class="auth-btn auth-btn--primary">
                    Вход
                </button>

                <div class="auth-links auth-links--stack">
                    <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш профил? Регистрация</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Изпрати отново потвърждение по имейл</a>
                </div>
            </form>
        </div>

        <aside class="auth-aside">
            <div class="auth-aside__card">
                <h2 class="auth-aside__title">Бърз достъп</h2>
                <ul class="auth-list">
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Достъп до карта на билките
                    </li>
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Добавяне на нови билки и снимки
                    </li>
                    <li class="auth-list__item">
                        <span class="auth-list__dot"></span>
                        Отбелязване на открития на терен
                    </li>
                </ul>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="auth-aside__card">
                    <h2 class="auth-aside__title">Вход с друг профил</h2>

                    <form id="external-account"
                          asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post"
                          class="auth-ext">

                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="auth-btn auth-btn--ghost"
                                    name="provider"
                                    value="@provider.Name"
                                    title="Вход с @provider.DisplayName">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </aside>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
